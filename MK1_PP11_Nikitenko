
import java.awt.*;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import javax.swing.*;

public class Main {
    public static void main(String[] args) {
        JFrame jFrame = new JFrame("Форма расчета калорий");
        jFrame.setSize(400, 500);
        jFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        jFrame.setLocationRelativeTo(null);
        jFrame.setLayout(new GridBagLayout());
        jFrame.setVisible(true);

        JLabel nameLabel1 = new JLabel("Расчет базового обмена веществ       ");
        JLabel nameLabel2 = new JLabel("по формуле Миффлина-Сан Жеора       ");

        JLabel heightLabel = new JLabel("Рост(в см): ");
        JTextField heightTextField = new JTextField(15);

        JLabel weightLabel = new JLabel("Вес(в кг): ");
        JTextField weightTextField = new JTextField(15);

        JLabel ageLabel = new JLabel("Возраст(в годах): ");
        JTextField ageTextField = new JTextField(15);

        JButton calculateButton = new JButton("Рассчитать");
        JLabel caloriesLabel = new JLabel("Ваша суточная норма калорий: ");

        jFrame.add(nameLabel1, new GridBagConstraints(0,0,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(30,2,2,2), 0, 0));
        jFrame.add(nameLabel2, new GridBagConstraints(0,1,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(1,2,2,2), 0, 0));

        jFrame.add(heightLabel, new GridBagConstraints(0,2,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));
        jFrame.add(heightTextField, new GridBagConstraints(1,2,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));

        jFrame.add(weightLabel, new GridBagConstraints(0,3,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));
        jFrame.add(weightTextField, new GridBagConstraints(1,3,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));

        jFrame.add(ageLabel, new GridBagConstraints(0,4,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));
        jFrame.add(ageTextField, new GridBagConstraints(1,4,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));

        jFrame.add(calculateButton, new GridBagConstraints(0,5,2,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(20,2,2,2), 0, 0));

        jFrame.add(caloriesLabel, new GridBagConstraints(0,7,1,1,0,0,
                GridBagConstraints.NORTH, GridBagConstraints.HORIZONTAL,
                new Insets(40,2,2,2), 0, 0));

        calculateButton.addActionListener(new ActionListener(){
            public final double HEIGHT_CONSTANT = 6.25;
            public final double WEIGHT_CONSTANT = 9.5;
            public final double AGE_CONSTANT = 4.92;

            public void actionPerformed(ActionEvent event) throws NumberFormatException{
               double height = Double.parseDouble((heightTextField.getText()));
               double weight = Double.parseDouble(weightTextField.getText());
               int age = Integer.parseInt(ageTextField.getText());

               double calculatedWeight = weight*WEIGHT_CONSTANT + height*HEIGHT_CONSTANT - age*AGE_CONSTANT;
               caloriesLabel.setText("Ваша суточная норма калорий: " + Double.toString(calculatedWeight));
            }
        });

        jFrame.pack();
    }
}
